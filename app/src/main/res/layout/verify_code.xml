<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E4E4E4"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="80dp"
                app:srcCompat="@drawable/fit_place" />

            <EditText
                android:id="@+id/verify_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="31dp"
                android:layout_marginTop="45dp"
                android:layout_marginRight="31dp"
                android:ems="10"
                android:gravity="center"
                android:hint="000000"
                android:inputType="phone" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="31dp"
                android:layout_marginRight="50dp"
                android:fontFamily="@font/montserrat"
                android:gravity="center"
                android:lineHeight="28sp"
                android:text="Введите код подтверждения из сообщения, отправленного на указанный вами номер телефона.  Доставка сообщения может занять минуту или более"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="31dp"
                android:layout_marginTop="55dp"
                android:layout_marginRight="31dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonCansel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/rounded_white_btn"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Отмена"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/buttonOK"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/rounded_btn"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Ok"
                    android:textSize="18sp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginLeft="31dp"
                android:layout_marginTop="28dp"
                android:layout_marginRight="31dp"
                android:fontFamily="@font/montserrat"
                android:gravity="center"
                android:lineHeight="18sp"
                android:text="Отправить повторно"
                android:textAllCaps="false"
                android:textSize="20sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
